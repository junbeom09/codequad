<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.njs.repository.SubscriptionRepository">

    <insert id="insert" parameterType="kr.njs.entity.Subscription">
        INSERT INTO subscriptions (user_id, uc_cate)
        VALUES (#{user_id}, #{uc_cate})
    </insert>

    <delete id="deleteByUserIdAndUcCate">
        DELETE FROM subscriptions
        WHERE user_id = #{user_id} AND uc_cate = #{uc_cate}
    </delete>

    <select id="findCategoriesByUserId" resultType="int">
        SELECT uc_cate FROM subscriptions WHERE user_id = #{user_id}
    </select>

</mapper>